

<div class="show">

    <p class="show-name">
    <%= @product.name %>
    </p>

    <p class="show-name">
    <%= @product.description %>
    </p>

    <p class="show-name">
    Color:
    <%= @product.colour %>
    </p>

    <p class="show-name">
    <%= image_tag(@product.image_url) %>
    </p>

    <p class="show-name">
    <strong>$</strong>
    <%= @product.price %>
    </p>



    <center><%= form_tag "/payments/create" do %>
    <%= render partial: "shared/stripe_checkout_button" %>
    <%= hidden_field(:product_id, :value => @product_id) %>
    <% end %></center>




    <div class="edit-back">
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>

      <div id="edit-destroy">
      <%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>

    </div>

</div>



<p class="average-rating">Average Rating: <div class="rated" data-score="<= @product.average_rating %>"></div> </p>


<%= render 'new_comment' %>
<%= render 'comments' %>



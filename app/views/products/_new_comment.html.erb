<% if signed_in? %>

  <h4>Take a moment and tell us what you think of our goods!</h4>

  <%= form_for ([@product, @product.comments.build]) do |f| %>

      <p>
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body %>
      </p>

      <div class="rating"></div>

      <p>
        <%= f.submit "Submit" %>
      </p>

  <% end %>
<% end %>

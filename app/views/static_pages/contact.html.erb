<h1>CONTACT US</h1>
  <div class="contact">Let me know what you think of our goods and don't be afraid to check out our social media sites below, thanks!
  </div>

<%= flash[:notice] %>


<%= form_tag("/static_pages/thank_you") do %>
<div class="row">
  <div class="col-md-4">
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
    </div>
    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <%= label_tag :message %>
      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
    </div>
  <%= submit_tag "Send" %>
  </div>

<% end %>


<div><center><%= image_tag("co_belt_buckle.jpg") %></center>
</div>

</div>
